@keyframes loadingRotate {
    0% {
        transform: rotate(0);
    }
    100% {
        transform: rotate(360deg);
    }
}

.loading {
    position: fixed;
    display: flex;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    align-items: center;
    align-content: center;
}

.loading__image {
    position: relative;
    margin: 0 auto;
    pointer-events: auto;
}

.loading__image--mgj {
    background-image: none;
}

.loading__slip {
    animation: loadingRotate 1050ms infinite;
}

.loading__slip--mgj {
    background-image: none;
}

.loading__box {
    width: 50rpx;
    height: 50rpx;
    background-repeat: no-repeat;
    background-size: cover;
}
